#!/bin/bash
#$ -S "/bin/bash"
#$ -cwd
#$ -o "job.stdout"
#$ -e "job.stderr"
#$ -l m_mem_free=32.0G
#$ -l h_rt=128:0:0
#$ -q noble-long.q

hostname
date
echo PID=$$

if [[ `uname` == "Linux" ]]; then
    source ~/.bashrc
elif [[ `uname` == "Darwin" ]]; then
    source ~/.bash_profile
fi

if [[ -e /etc/profile.d/modules.sh ]]; then
  source /etc/profile.d/modules.sh
  module load modules modules-init modules-gs modules-noble
fi

# These three options make it harder to for some part of a script to
# fail without you recognizing it. nounset means that references to an
# unset variable result in an error. This means that you can no longer
# do stuff like this if VAR is potentially unset, because "$VAR" returns
# an error rather than "":
#
# if [ "$VAR" ]; then
#
# fi
#
# To explicitly indicate that you are OK with the variable potentially
# being empty you can instead use ${VAR:-}.

# To avoid errexit for a single command, use "|| true", e.g.,
#    diff foo foobar || true

set -o nounset
set -o pipefail
set -o errexit 
set -o xtrace

rootdir=wnoble@nexus.gs.washington.edu:/net/noble/vol1/data/crux-datasets/2017tran-denovo

mkdir -p genomes
for species in Apis-mellifera \
                   Candidatus-endoloripes \
                   Saccharomyces-cerevisiae ; do
    scp $rootdir/genomes/$species.fasta genomes
done

mkdir -p Apis-mellifera
scp $rootdir/genomes/Apis-mellifera/BC-2.mgf \
    Apis-mellifera
scp $rootdir/genomes/Apis-mellifera/M-3.mgf \
    Apis-mellifera
scp $rootdir/genomes/Apis-mellifera/S-1.mgf \
    Apis-mellifera

mkdir -p Candidatus-endoloripes
scp $rootdir/genomes/Candidatus-endoloripes/Run1_82-g1_2000ng.mgf \
    Candidatus-endoloripes
scp $rootdir/genomes/Candidatus-endoloripes/Run1_85-g1_2000ng.mgf \
    Candidatus-endoloripes
scp $rootdir/genomes/Candidatus-endoloripes/Run2_83-g1_2000ng.mgf \
    Candidatus-endoloripes

mkdir -p Saccharomyces-cerevisiae
scp $rootdir/genomes/Saccharomyces-cerevisiae/BY_04_NaN3_2.mgf \
    Saccharomyces-cerevisiae
scp $rootdir/genomes/Saccharomyces-cerevisiae/delPBP1_DB_NaN3.3.mgf \
    Saccharomyces-cerevisiae
scp $rootdir/genomes/Saccharomyces-cerevisiae/delPBP1_SM_1.mgf \
    Saccharomyces-cerevisiae

